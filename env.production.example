# Production Environment Variables for Stockee
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://stockee:secure_password@postgres:5432/stockee
POSTGRES_USER=stockee
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=stockee

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=secure_redis_password

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here
NEWS_API_KEY=your_news_api_key_here
BINANCE_API_KEY=your_binance_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Security
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# External Services
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
ALPHA_VANTAGE_RATE_LIMIT=5
ALPHA_VANTAGE_DAILY_LIMIT=500
POLYGON_BASE_URL=https://api.polygon.io
NEWS_API_BASE_URL=https://newsapi.org/v2

# Performance
WORKERS=4
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=5
GRACEFUL_TIMEOUT=30

# Monitoring
PROMETHEUS_ENABLED=True
GRAFANA_ENABLED=True
SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your_email_password_here
SMTP_TLS=True

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-west-2

# Grafana Configuration
GRAFANA_PASSWORD=secure_grafana_password_here

# Domain Configuration
DOMAIN=yourdomain.com
WWW_DOMAIN=www.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# AI Configuration
AI_MODEL_UPDATE_SCHEDULE=0 2 * * 0
AI_PREDICTION_CACHE_TTL=3600

# Trading Configuration
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=America/New_York

# Portfolio Configuration
PORTFOLIO_UPDATE_INTERVAL=30
PORTFOLIO_CACHE_TTL=60

# News Configuration
NEWS_UPDATE_INTERVAL=300
NEWS_CACHE_TTL=600

# Technical Analysis Configuration
TECHNICAL_ANALYSIS_UPDATE_INTERVAL=60
TECHNICAL_ANALYSIS_CACHE_TTL=300

# Social Features Configuration
SOCIAL_POSTS_PER_PAGE=20
SOCIAL_CACHE_TTL=300

# Mobile App Configuration
MOBILE_API_VERSION=1.0.0
MOBILE_MIN_VERSION=1.0.0

# Development/Testing
TESTING=False
MOCK_EXTERNAL_APIS=False

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Alert Configuration
ALERT_EMAIL=admin@yourdomain.com
ALERT_SMS_NUMBER=+1234567890
ALERT_SLACK_CHANNEL=#alerts

# Performance Monitoring
PERFORMANCE_MONITORING=True
PERFORMANCE_SAMPLING_RATE=0.1

# Error Tracking
ERROR_TRACKING=True
ERROR_SAMPLING_RATE=1.0

# Feature Flags
FEATURE_AI_PREDICTIONS=True
FEATURE_SOCIAL_TRADING=True
FEATURE_OPTIONS_TRADING=True
FEATURE_CRYPTO_TRADING=True
FEATURE_MOBILE_APP=True

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Pool Configuration
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=5

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# WebSocket Configuration
WEBSOCKET_URL=ws://localhost:8000/api/ws
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# CSRF Configuration
CSRF_SECRET_KEY=your_csrf_secret_key_here
CSRF_TIMEOUT=3600

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/csp-report
CSP_REPORT_ONLY=False

# HSTS Configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=True
HSTS_PRELOAD=True

# Compression Configuration
COMPRESSION_ENABLED=True
COMPRESSION_LEVEL=6
COMPRESSION_MIN_SIZE=1024

# Static Files Configuration
STATIC_URL=/static/
STATIC_ROOT=/app/static
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# CDN Configuration
CDN_ENABLED=False
CDN_URL=https://cdn.yourdomain.com

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=False
LOAD_BALANCER_STICKY_SESSIONS=False

# Auto Scaling Configuration
AUTO_SCALE_ENABLED=False
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_TARGET_CPU=70
AUTO_SCALE_TARGET_MEMORY=80

# Disaster Recovery Configuration
DR_ENABLED=False
DR_BACKUP_INTERVAL=24
DR_RETENTION_DAYS=30
DR_RECOVERY_TIME_OBJECTIVE=4
DR_RECOVERY_POINT_OBJECTIVE=1

# Compliance Configuration
COMPLIANCE_MODE=False
AUDIT_LOGGING=True
DATA_RETENTION_DAYS=2555
PRIVACY_MODE=False

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko
TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S

# Currency Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CNY
CURRENCY_DECIMAL_PLACES=2

# Market Configuration
DEFAULT_MARKET=US
SUPPORTED_MARKETS=US,EU,UK,JP,CN
MARKET_HOURS_OVERRIDE=False

# Risk Management
RISK_MANAGEMENT_ENABLED=True
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
MAX_PORTFOLIO_RISK=0.1

# Compliance and Regulations
REGULATORY_MODE=False
KYC_REQUIRED=False
AML_ENABLED=False
REPORTING_ENABLED=False

# Third-party Integrations
INTEGRATION_MODE=False
WEBHOOK_ENABLED=False
API_WEBHOOK_URL=https://yourdomain.com/api/webhooks

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X

# A/B Testing Configuration
AB_TESTING_ENABLED=False
AB_TESTING_PROVIDER=internal

# Feature Toggles
TOGGLE_NEW_DASHBOARD=False
TOGGLE_ADVANCED_CHARTING=True
TOGGLE_SOCIAL_FEATURES=True
TOGGLE_AI_INSIGHTS=True
TOGGLE_MOBILE_APP=True

# Environment Information
ENVIRONMENT=production
VERSION=1.0.0
BUILD_NUMBER=1
DEPLOYMENT_DATE=2023-10-26
DEPLOYMENT_TIME=10:30:00
